<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/photo_transition</item>
        <item name="android:windowExitTransition">@transition/photo_transition</item>
        <item name="android:actionBarStyle">@style/PhotoActionBarStyle</item>

        <!--<item name="android:background">@android:color/black</item>-->
        <!--<item name="android:windowBackground">@android:color/black</item>-->
        <!--<item name="android:colorBackground">@android:color/black</item>-->
        <!--<item name="colorControlNormal">@android:color/white</item>-->
        <!--<item name="android:editTextColor">@android:color/white</item>-->
        <!--<item name="android:textColorHint">@android:color/white</item>-->
    </style>

    <style name="PhotoActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/PhotoTitleTextStyle</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="PhotoTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
